<h2><%=@attraction.name%></h2>

<% if @user.admin %>
  <p>Tickets: <%= @attraction.tickets %><br></p>
  <p>Nausea Rating: <%= @attraction.nausea_rating %><br></p>
  <p>Happiness Rating: <%= @attraction.happiness_rating %><br></p>
  <p>Height Requirement: <%= @attraction.min_height %><br></p>

  <%= link_to "Edit Attraction", edit_attraction_path(@attraction.id) %><br>

<% else %>

  <%= form_tag ({controller: 'rides', action: 'create', method: 'post'}) do %>
    <%= hidden_field_tag :user_id, session[:user_id]%>
    <%= hidden_field_tag :attraction_id, @attraction.id %>
    <%= submit_tag "Go on this ride" %>
  <% end %>

  <% end %>
